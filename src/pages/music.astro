---
import BaseLayout from '../layouts/BaseLayout.astro';
import SoundCloudEmbed from '../components/SoundCloudEmbed.astro';

// Placeholder tracks - replace with actual SoundCloud URLs
const tracks = [
  {
    url: 'https://soundcloud.com/placeholder/track-1',
    title: 'Track Title',
    description: 'Category - Brief description of the track and its use.',
  },
  {
    url: 'https://soundcloud.com/placeholder/track-2',
    title: 'Track Title',
    description: 'Category - Brief description of the track and its use.',
  },
  {
    url: 'https://soundcloud.com/placeholder/track-3',
    title: 'Track Title',
    description: 'Category - Brief description of the track and its use.',
  },
];

const categories = ['All', 'Film', 'Television', 'Advertising', 'Trailers'];
---

<BaseLayout title="Music" description="Browse the music catalog of Chris Randall - compositions for film, TV, and advertising.">
  <div class="container">
    <header class="page-header">
      <h1>Music Catalog</h1>
      <p class="text-muted">Browse compositions by category or listen to the full catalog below.</p>
    </header>

    <nav class="category-filter">
      {categories.map((cat, i) => (
        <button class:list={['filter-btn', { active: i === 0 }]}>{cat}</button>
      ))}
    </nav>

    <section class="tracks-list">
      {tracks.map(track => (
        <SoundCloudEmbed
          trackUrl={track.url}
          title={track.title}
          description={track.description}
        />
      ))}

      <div class="placeholder-notice">
        <p>Add your SoundCloud track URLs to populate this page.</p>
        <p class="text-muted">Edit <code>src/pages/music.astro</code> to add tracks.</p>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .category-filter {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .filter-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter-btn:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text);
  }

  .filter-btn.active {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .tracks-list {
    max-width: 800px;
  }

  .placeholder-notice {
    text-align: center;
    padding: 3rem;
    background-color: var(--color-bg-secondary);
    border-radius: 8px;
    margin-top: 2rem;
  }

  .placeholder-notice code {
    background-color: var(--color-bg);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }
</style>
