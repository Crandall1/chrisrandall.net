---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Music" description="Browse the music catalog of Chris Randall - compositions for film, TV, and advertising.">
  <div class="container">
    <header class="page-header">
      <h1>Music</h1>
    </header>

    <div class="playlist-grid">
      <div class="playlist-item">
        <h2>Micronaut - Unceremonious</h2>
        <p class="playlist-desc">Dark, moody modern electronica</p>
        <iframe id="disco-playlist-27593591" name="disco-playlist-27593591" allowfullscreen frameborder="0" class="disco-embed" src="https://chrisrandall.disco.ac/e/p/27593591?download=false&s=USiRfWxyTtL9euA1Y68ebEOoleA%3AlJZD1cGw&artwork=true&color=%234E98FF&theme=dark" width="480" height="395"></iframe>
        <a href="https://micronaut.bandcamp.com/album/unceremonious" target="_blank" rel="noopener" class="purchase-link">Purchase Album</a>
      </div>
      <div class="playlist-item">
        <h2>Chris Randall - 52 Weeks</h2>
        <p class="playlist-desc">Jazzy abstract lo-fi electronics</p>
        <iframe id="disco-playlist-27606875" name="disco-playlist-27606875" allowfullscreen frameborder="0" class="disco-embed" src="https://chrisrandall.disco.ac/e/p/27606875?download=false&s=BfhQP7s5GbJwgV8Zv_XVBdrVD1U%3ANEHccaYZ&artwork=true&color=%234E98FF&theme=dark" width="480" height="395"></iframe>
        <a href="https://chrisrandall.bandcamp.com/album/52-weeks-01-52-technic" target="_blank" rel="noopener" class="purchase-link">Purchase Album</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .playlist-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    justify-items: center;
  }

  .playlist-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .playlist-item h2 {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .playlist-desc {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .purchase-link {
    margin-top: 0.75rem;
    color: var(--color-accent);
    font-size: 0.85rem;
  }

  .purchase-link:hover {
    text-decoration: underline;
  }

  .disco-embed {
    max-width: 100%;
    border-radius: 8px;
  }

  @media (max-width: 1000px) {
    .playlist-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
