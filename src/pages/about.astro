<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    margin-bottom: 1.5rem;
  }

  .intro {
    font-size: 1.2rem;
    line-height: 1.8;
    max-width: 700px;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .credits-section {
    margin-bottom: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .credits-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .credit-group {
    margin-bottom: 2rem;
  }

  .credit-group h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-muted);
  }

  .credit-group h3 a {
    color: var(--color-accent);
  }

  .credit-group h3 a:hover {
    text-decoration: underline;
  }

  .credit-group ul,
  .credits-list {
    list-style: none;
    columns: 2;
    column-gap: 2rem;
  }

  .credit-group li,
  .credits-list li {
    padding: 0.4rem 0;
    color: var(--color-text);
    break-inside: avoid;
  }

  @media (max-width: 600px) {
    .credit-group ul,
    .credits-list {
      columns: 1;
    }
  }
</style>
