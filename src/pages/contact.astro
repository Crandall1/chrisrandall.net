---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with Chris Randall for music licensing, custom composition, and sync opportunities.">
  <div class="container">
    <div class="contact-layout">
      <div class="contact-info">
        <h1>Get in Touch</h1>
        <p>
          Interested in licensing music or commissioning a custom composition?
          I'd love to hear about your project.
        </p>

        <div class="contact-methods">
          <div class="contact-method">
            <h3>Email</h3>
            <a href="mailto:your@email.com">your@email.com</a>
          </div>

          <div class="contact-method">
            <h3>Representation</h3>
            <p class="text-muted">[Agency/Publisher name if applicable]</p>
          </div>

          <div class="contact-method">
            <h3>Social</h3>
            <div class="social-links">
              <a href="#" target="_blank" rel="noopener">SoundCloud</a>
              <a href="#" target="_blank" rel="noopener">Instagram</a>
              <a href="#" target="_blank" rel="noopener">LinkedIn</a>
            </div>
          </div>
        </div>
      </div>

      <div class="contact-note">
        <h2>Quick Licensing</h2>
        <p>
          Many tracks are available for immediate licensing. For custom work or
          exclusive arrangements, please reach out directly.
        </p>
        <p class="text-muted">
          Average turnaround for custom compositions: 1-2 weeks depending on scope.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    max-width: 900px;
  }

  .contact-info h1 {
    margin-bottom: 1rem;
  }

  .contact-info > p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-method h3 {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .contact-method a {
    color: var(--color-accent);
    font-size: 1.1rem;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    font-size: 1rem;
  }

  .contact-note {
    background-color: var(--color-bg-secondary);
    padding: 2rem;
    border-radius: 8px;
    height: fit-content;
  }

  .contact-note h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .contact-note p {
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
