---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <section class="hero">
    <div class="container">
      <h1>Music for Picture</h1>
      <p class="tagline">
        Composer and sound designer crafting music for film, television, and advertising.
      </p>
      <div class="cta-links">
        <a href="/music" class="cta-primary">Listen</a>
        <a href="/contact" class="cta-secondary">Get in Touch</a>
      </div>
    </div>
  </section>

  <section class="featured">
    <div class="container">
      <h2 class="section-title">Recent Work</h2>
      <p class="text-muted section-subtitle">Selected compositions</p>

      <div class="featured-grid">
        <div class="featured-item">
          <iframe id="disco-track-191152465" name="disco-track-191152465" allowfullscreen frameborder="0" class="disco-embed" src="https://chrisrandall.disco.ac/e/t/191152465?s=9R5lekryJ3f9vD3HDKFp_0HULM8%3AIND7WiDN&artwork=true&color=%234E98FF&theme=dark" width="480" height="235"></iframe>
        </div>
        <div class="featured-item">
          <iframe id="disco-track-191152463" name="disco-track-191152463" allowfullscreen frameborder="0" class="disco-embed" src="https://chrisrandall.disco.ac/e/t/191152463?s=09X95Cwrx0pxvFven7ZNfr_OVOU%3Au2S2ZeNl&artwork=true&color=%234E98FF&theme=dark" width="480" height="235"></iframe>
        </div>
        <div class="featured-item">
          <iframe id="disco-track-191152141" name="disco-track-191152141" allowfullscreen frameborder="0" class="disco-embed" src="https://chrisrandall.disco.ac/e/t/191152141?s=_e6WrsbKNJ7Fn45aPtVZ2dPlvPM%3AKG5lVXR3&artwork=true&color=%234E98FF&theme=dark" width="480" height="235"></iframe>
        </div>
      </div>

      <div class="view-all">
        <a href="/music">View Full Catalog &rarr;</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0 6rem;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin: 0 auto 2rem;
  }

  .cta-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .cta-primary,
  .cta-secondary {
    padding: 0.75rem 2rem;
    border-radius: 4px;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-primary {
    background-color: var(--color-accent);
    color: white;
  }

  .cta-primary:hover {
    background-color: #2563eb;
    color: white;
  }

  .cta-secondary {
    border: 1px solid var(--color-border);
  }

  .cta-secondary:hover {
    border-color: var(--color-text-muted);
  }

  .featured {
    padding: 4rem 0;
  }

  .section-title,
  .section-subtitle {
    text-align: center;
  }

  .featured h2 {
    margin-bottom: 0.5rem;
  }

  .featured-grid {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    margin-top: 2rem;
  }

  .featured-item {
    display: flex;
    justify-content: center;
  }

  .disco-embed {
    max-width: 100%;
    border-radius: 8px;
  }

  .view-all {
    margin-top: 3rem;
    text-align: center;
  }

  .view-all a {
    color: var(--color-accent);
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .cta-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
