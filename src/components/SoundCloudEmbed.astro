---
interface Props {
  trackUrl: string;
  title?: string;
  description?: string;
  height?: number;
}

const { trackUrl, title, description, height = 166 } = Astro.props;

// Encode the track URL for the iframe src
const embedUrl = `https://w.soundcloud.com/player/?url=${encodeURIComponent(trackUrl)}&color=%233b82f6&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=false`;
---

<div class="soundcloud-track">
  {title && <h3 class="track-title">{title}</h3>}
  {description && <p class="track-description">{description}</p>}
  <div class="embed-container">
    <iframe
      width="100%"
      height={height}
      scrolling="no"
      frameborder="no"
      allow="autoplay"
      src={embedUrl}
    ></iframe>
  </div>
</div>

<style>
  .soundcloud-track {
    margin-bottom: 2rem;
  }

  .track-title {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .track-description {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .embed-container {
    background-color: var(--color-bg-secondary);
    border-radius: 8px;
    overflow: hidden;
  }

  iframe {
    display: block;
  }
</style>
