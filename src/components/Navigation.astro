---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/music', label: 'Music' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<nav>
  <div class="nav-container">
    <a href="/" class="nav-logo">
      <span class="logo-circle"></span>
      Chris Randall
    </a>
    <ul class="nav-links">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[{ active: currentPath === link.href }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    background-color: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .logo-circle {
    width: 24px;
    height: 24px;
    background-color: #e5e5e5;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-links a {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-text);
  }

  @media (max-width: 600px) {
    .nav-links {
      gap: 1rem;
    }

    .nav-links a {
      font-size: 0.8rem;
    }
  }
</style>
